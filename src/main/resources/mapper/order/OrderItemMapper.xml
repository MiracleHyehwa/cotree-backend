<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.futurenet.cotree.order.repository.OrderItemRepository">
    <insert id="saveOrderItem" parameterType="com.futurenet.cotree.order.dto.request.OrderItemRegisterRequest">
        INSERT INTO order_item (order_id, item_id, quantity)
        VALUES(#{request.orderId}, #{request.itemId}, #{request.quantity})
    </insert>
</mapper>